<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiApp1.Views"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="{StaticResource DeepIceBackground}" 
    TabBarBackgroundColor="{StaticResource GlassSurface}"
    TabBarTitleColor="{StaticResource TextSecondary}"
    TabBarUnselectedColor="{StaticResource TextSecondary}">

    <TabBar>
        <ShellContent
            Title="Главная"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Программы"
            ContentTemplate="{DataTemplate views:MainPage}" 
            Route="CatalogPage" />

        <ShellContent
            Title="Профиль"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="ProfilePage" />
    </TabBar>

</Shell>
